{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": ".",
    "paths": {
      "~*": ["./src/*"]
    },
    "declaration": false,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strictNullChecks": true
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*", ".d.ts"]
}