main.container._h-auto._min-h-100vh._flex._align-center._justify-center.profile-container
  .form-wrapper.profile-form-wrapper
    form.form.profile-form
      h1.profile-form__title Edit Profile
      .form-controls
        label(for="firstNameInput").form-controls__label 
          span First Name
        input(type="text" id="firstNameInput" name="firstName").form-controls__control.text-input
      .form-controls
        label(for="lastNameInput").form-controls__label 
          span Last Name
        input(type="text" id="lastNameInput" name="lastName").form-controls__control.text-input
      .form-controls
        label(for="emailInput").form-controls__label 
          span Email
        input(type="text" id="emailInput" name="email").form-controls__control.text-input
      .form-controls
        label(for="phoneNumberInput").form-controls__label 
          span Phone Number
        input(type="text" id="phoneNumberInput" name="phoneNumber").form-controls__control.text-input
      .form-controls
        label(for="loginInput").form-controls__label 
          span Login
        input(type="text" id="loginInput" name="login").form-controls__control.text-input
      .form-controls
        label(for="passwordInput").form-controls__label 
          span Password
        input(type="text" id="passwordInput" name="password").form-controls__control.text-input
      .form-controls__button-group
        button(type="submit").form-controls__button.button.button_primary Save Changes
        a(href="/").form-controls__button.button.button_link Go Back
  .profile-photo
    img(src=editIcon, alt="edit", class="profile-photo__edit-button")
    img(src=userPhoto, alt="userPhoto", class="profile-photo__image", height="100%")
